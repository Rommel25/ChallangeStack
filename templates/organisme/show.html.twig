{% extends 'base.html.twig' %}

{% block title %}
  Organisme
{% endblock %}

{% block body %}
  {% if (organisme.formations|length) > 0 %}
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
      <caption class="p-5 text-lg font-semibold text-left rtl:text-right text-gray-900 bg-white dark:text-white dark:bg-gray-800">
        Vos formations<p class="mt-1 text-sm font-normal text-gray-500 dark:text-gray-400">Parcourez la liste des formations que vous avez.</p>
      </caption>
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="px-6 py-3">Nom</th>
          <th scope="col" class="px-6 py-3">Voir les classes</th>
          <th scope="col" class="px-6 py-3">Modifier la formation</th>
        </tr>
      </thead>
      <tbody>
        {% for formation in organisme.formations %}
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <td class="px-6 py-4">{{ formation.libelle }}</td>
            <td class="px-6 py-4">
              <a href="{{ path('app_formation_show', { id: formation.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Voir classes</a>
            </td>
            <td class="px-6 py-4">
              <a href="{{ path('app_formation_edit', { id: formation.id }) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Modifier formation</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Vous n'avez pas de formations dans cette organisme</p>
  {% endif %}
  <div class="flex justify-center items-center mt-4">
    <a href="{{ path("app_formation_new" , {idOrg:organisme.id}) }}"><button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Cr√©er une formation</button></a>
  </div>
{% endblock %}
