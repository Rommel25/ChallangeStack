{% extends 'base.html.twig' %}

{% block title %}Détails de l'Élève
{% endblock %}

{% block body %}
	<div>
		<nav class="flex" aria-label="Breadcrumb">
			<ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
				<li class="inline-flex items-center">
					<a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
						<svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
							<path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
						</svg>Tableau de bord
					</a>
				</li>
				<li>
					<div class="flex items-center">
						<svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
						</svg>
						<a href="{{ path('app_eleve_index') }}" class="ms-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ms-2 dark:text-gray-400 dark:hover:text-white">Listes des élèves</a>
					</div>
				</li>
				<li>
					<div class="flex items-center">
						<svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 6 10">
							<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
						</svg>
						<span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">Information élève</span>
					</div>
				</li>
			</ol>
		</nav>
	</div>
	<div class="max-w-4xl p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mx-auto my-8">
		<h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">Détails de l'Élève</h1>
		<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 mb-6">
			<tbody>
				<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
					<th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">ID</th>
					<td class="px-6 py-4">{{ eleve.id }}</td>
				</tr>
				<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
					<th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">Prénom</th>
					<td class="px-6 py-4">{{ infoEleve.prenom }}</td>
				</tr>
				<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
					<th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">Nom</th>
					<td class="px-6 py-4">{{ infoEleve.nom }}</td>
				</tr>
				<tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
					<th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">Email</th>
					<td class="px-6 py-4">{{ infoEleve.email }}</td>
				</tr>
			</tbody>
		</table>

		<div class="flex mt-4 md:mt-6 items-start gap-5">
			<a href="{{ path('app_eleve_edit', {'id': eleve.id}) }}" class="inline-flex items-center text-sm px-5 py-2.5 me-2 mb-2 font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Modifier</a>

			{{ include('eleve/_delete_form.html.twig') }}
		</div>

		<a href="{{ path('app_eleve_index') }}" class="text-blue-600 hover:underline text-sm mt-4 block">Retour à la liste</a>
	</div>
{% endblock %}
