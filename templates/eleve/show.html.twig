{% extends 'base.html.twig' %}

{% block title %}Détails de l'Élève{% endblock %}

{% block body %}
    <div class="max-w-4xl p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mx-auto my-8">
        <h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-4">Détails de l'Élève</h1>

        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 mb-6">
            <tbody>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">ID</th>
                    <td class="px-6 py-4">{{ eleve.id }}</td>
                </tr>
            </tbody>
        </table>

        <div class="flex mt-4 md:mt-6 items-start gap-5">
            <a href="{{ path('app_eleve_edit', {'id': eleve.id}) }}" class="inline-flex items-center text-sm px-5 py-2.5 me-2 mb-2 font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Modifier</a>
            
            {{ include('eleve/_delete_form.html.twig') }}
        </div>

        <a href="{{ path('app_eleve_index') }}" class="text-blue-600 hover:underline text-sm mt-4 block">Retour à la liste</a>
    </div>
{% endblock %}
